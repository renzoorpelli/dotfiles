shell-integration = fish
command = /opt/homebrew/bin/fish

theme = GruvboxDarkHard
font-family = Osaka-Mono
font-size = 18
font-thicken = true
keybind = ctrl+n=new_window

keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

# Native splits for local work
keybind = ctrl+shift+h=new_split:left
keybind = ctrl+shift+j=new_split:down
keybind = ctrl+shift+k=new_split:up
keybind = ctrl+shift+l=new_split:right
keybind = ctrl+shift+f=toggle_split_zoom

# Native tab navigation
keybind = ctrl+shift+n=next_tab
keybind = ctrl+shift+p=previous_tab
keybind = ctrl+t=new_tab
keybind = ctrl+w=close_surface

keybind = super+r=reload_config
window-save-state = always
